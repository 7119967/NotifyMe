@model PostViewModel

@{
    ViewBag.Title = "Создание публикации";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Notifications" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="File" class="control-label">Загрузите файл изображения</label>
                <input asp-for="File" type="file" class="form-control-file" style="border: none; margin-top: 10px;"/>
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeStamp" class="control-label"></label>
                <input asp-for="TimeStamp" class="form-control" readonly/>
            </div>
            <div class="form-group col-md-6">
                <input type="hidden" asp-for="@Model.UserId" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Опубликовать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Перейти к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}