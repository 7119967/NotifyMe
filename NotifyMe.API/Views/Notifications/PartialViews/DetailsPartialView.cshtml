@model Notification
@{
    ViewBag.Title = "Preview";
    Layout = "_Layout";
}
<div class="modal fade" id="modal-details" tabindex="-1" aria-labelledby="modalDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg p-5">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalDetailsLabel">@ViewBag.Title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
                  <div class="modal-body">
                      <div class="row mb-3">
                          <div class="col">
                              <div class="form-group">
                                  <label asp-for="Message" class="control-label"></label>
                                  <input asp-for="Message" class="form-control" id="Message">
                              </div>
                          </div>
                      </div>
                      <div class="row mb-3">
                          <div class="col">
                              <div class="form-group">
                                  <label asp-for="EventId" class="control-label"></label>
                                  <input asp-for="EventId" class="form-control" id="EventId">
                              </div>
                          </div>
                      </div>
                  </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>