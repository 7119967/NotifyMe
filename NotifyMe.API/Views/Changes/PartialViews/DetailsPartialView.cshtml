@model Change
@{
    ViewBag.Title = "Preview";
    Layout = "_Layout";
}
<div class="modal fade" id="modal-details" tabindex="-1" aria-labelledby="modalDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg p-5">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalDetailsLabel">@ViewBag.Title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control" id="Id" readonly>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Timestamp" class="control-label"></label>
                            <input asp-for="Timestamp" class="form-control" id="Timestamp" readonly>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="ChangeType" class="control-label"></label>
                            <input asp-for="ChangeType" class="form-control" id="ChangeType" readonly>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="ChangeDescription" class="control-label"></label>
                            <textarea asp-for="ChangeDescription" class="form-control" id="ChangeDescription" readonly></textarea>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Event.EventName" class="control-label"></label>
                            <input asp-for="Event.EventName" class="form-control" id="Event.EventName" readonly>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Event.EventDescription" class="control-label"></label>
                            <input asp-for="Event.EventDescription" class="form-control" id="Event.EventDescription" readonly>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>